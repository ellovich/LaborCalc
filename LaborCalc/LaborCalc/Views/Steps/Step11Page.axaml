<UserControl
    x:Class="LaborCalc.Views.Step11Page"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:laborCalc="clr-namespace:LaborCalc"
    xmlns:controls="clr-namespace:LaborCalc.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:LaborCalc.Models"
    xmlns:viewModels="clr-namespace:LaborCalc.ViewModels"
    xmlns:views="clr-namespace:LaborCalc.Views"
    d:DesignHeight="960"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <DockPanel>

        <Grid
            MaxWidth="1100"
            ColumnDefinitions="50*, 300*, 300*, auto"
            DockPanel.Dock="Top"
            RowDefinitions="auto, auto, auto, auto, auto, auto, auto, auto, auto">

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="15"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="n" />
                <TextBlock Classes="sub" Text="зан" />
            </StackPanel>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="15"
                Text="Кол-во часов занятий:"
                TextWrapping="Wrap" />
            <NumericUpDown
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Center"
                Classes="count"
                Value="{Binding N_зан}" />

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="15"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="n" />
                <TextBlock Classes="sub" Text="экз" />
            </StackPanel>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="15"
                Text="Кол-во часов на проведение экзаменов/зачётов:"
                TextWrapping="Wrap" />
            <NumericUpDown
                Grid.Row="1"
                Grid.Column="2"
                VerticalAlignment="Center"
                Classes="count"
                Value="{Binding N_экз}" />

            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Margin="15"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="k" />
                <TextBlock Classes="sub" Text="нов" />
            </StackPanel>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="15"
                Text="Степень корректировки:"
                TextWrapping="Wrap" />
            <ComboBox
                Grid.Row="2"
                Grid.Column="2"
                VerticalAlignment="Center"
                Classes="correction"
                Items="{x:Static models:Step11.s_Corrections11_2}"
                SelectedItem="{Binding Correction}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" ToolTip.Tip="{Binding Coef}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Classes="cancel"
            Command="{Binding DeleteStepCommand}"
            Content="Удалить этап"
            DockPanel.Dock="Bottom" />

    </DockPanel>
</UserControl>
